<h1>Change password</h1>

<%= form_tag account_path, method: :patch do %>

  <%= render 'common/validation_errors', model: current_user %>

  <div class="form-group">
    <%= label_tag "Current password" %>
    <%= password_field_tag "account[current_password]", "", required: true, class: "form-control", autocomplete: "off" %>
  </div>

  <hr>

  <div class="form-group">
    <%= label_tag "New password" %>
    <%= password_field_tag "account[password]", "", required: true, class: "form-control", autocomplete: "off" %>
    <span class="help-block"><%= User.password_length.min %> characters minimum</span>
  </div>

  <div class="form-group">
    <%= label_tag "Repeat new password" %>
    <%= password_field_tag "account[password_confirmation]", "", required: true, class: "form-control", autocomplete: "off" %>
  </div>

  <div class="form-group actions">
    <%= submit_tag "Update password", class: "btn btn-primary" %>
  </div>

<% end %>
