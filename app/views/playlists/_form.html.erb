<%= form_with(model: playlist, url: (playlist.new_record? ? [playlist.theme, playlist] : playlist), local: true) do |form| %>
  <%= render 'common/validation_errors', model: playlist %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, required: true, class: 'form-control', id: :playlist_name %>
    <span class="help-block">
      Required. The playlist name isn't shown publically, it's only for naming the playlist in the CMS.
    </span>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control', id: :playlist_description %>
    <span class="help-block">
      Optional notes, not shown publically.
    </span>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
    <%= yield %>
  </div>
<% end %>
