<%= form_with(model: image, url: (image.new_record? ? [image.gallery, image] : image), local: true) do |form| %>
  <%= render 'common/validation_errors', model: image %>

  <div class="form-group">
    <%= form.label :file %>
    <%= form.file_field :file, id: :image_file, accept: "image/jpeg,image/pjpeg,image/png" %>
    <span class="help-block">
      JPEG or PNG.
      <% if image.new_record? %>
        Required.
      <% else %>
        Select a file to replace the current image or leave blank.
      <% end %>
    </span>
  </div>


  <div class="row">
    <div class="col-md-6">
      <h3>Danish (required)</h3>

      <div class="form-group">
        <%= form.label :title_da %>
        <%= form.text_field :title_da, required: true, class: 'form-control', id: :image_title_da %>
      </div>

      <div class="form-group">
        <%= form.label :description_da %>
        <%= form.text_area :description_da, class: 'form-control', required: true, id: :image_description_da %>
      </div>

      <div class="form-group">
        <%= form.label :source_da %>
        <%= form.text_field :source_da, required: true, class: 'form-control', id: :image_source_da %>
      </div>
    </div>

    <div class="col-md-6">
      <h3>English</h3>

      <div class="form-group">
        <%= form.label :title_en %>
        <%= form.text_field :title_en, class: 'form-control', id: :image_title_en %>
      </div>

      <div class="form-group">
        <%= form.label :description_en %>
        <%= form.text_area :description_en, class: 'form-control', id: :image_description_en %>
      </div>

      <div class="form-group">
        <%= form.label :source_en %>
        <%= form.text_field :source_en, class: 'form-control', id: :image_source_en %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
