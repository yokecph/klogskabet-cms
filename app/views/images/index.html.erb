<p id="notice"><%= notice %></p>

<h1>Images</h1>

<table>
  <thead>
    <tr>
      <th>Gallery</th>
      <th>Title da</th>
      <th>Title en</th>
      <th>Description da</th>
      <th>Description en</th>
      <th>Source da</th>
      <th>Source en</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.title_da %></td>
        <td><%= image.title_en %></td>
        <td><%= image.description_da %></td>
        <td><%= image.description_en %></td>
        <td><%= image.source_da %></td>
        <td><%= image.source_en %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_gallery_image_path(@gallery) %>
