<h1>Theme: <%= @theme.name %></h1>

<p>
  <%= link_to 'Edit theme...', edit_theme_path(@theme) %>
  |
  <%= link_to 'Delete theme and content...', @theme, method: :delete, data: { confirm: 'Are you sure you want to delete this theme and all its content?' }, class: "text-danger" %>
</p>

<div class="well" style="background: <%= @theme.color %>">
  <strong>Color:</strong>
  <%= @theme.color_name.try(:capitalize) || "?" %>
  <samp>(<%= @theme.color %>)</samp>
</div>

<h2>Content</h2>

<h3>Galleries</h3>

<% if @theme.galleries.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th style="width: 20%">Languages</th>
      </tr>
    </thead>
    <tbody>
    <% @theme.galleries.each do |model| %>
      <tr>
        <td>
          <%= link_to model.name, model %>

          <% if model.assigned? %>
            <span class="label label-warning">LIVE</span>
          <% end %>

          <% unless model.presentable? %>
            <span class="label label-danger">Incomplete</span>
          <% end %>
        </td>
        <td><%= model.bilingual? ? "Danish/English" : "Danish" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p><em class="text-muted">No galleries yet</em></p>
<% end %>

<p><%= link_to 'Add gallery...', new_theme_gallery_path(@theme) %></p>

<hr>

