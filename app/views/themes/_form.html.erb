<%= form_with(model: theme, local: true) do |form| %>
  <%= render 'common/validation_errors', model: theme %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control', required: true, id: :theme_name %>
  </div>

  <div class="form-group">
    <%= form.label :color %>
    <%= select_tag 'theme[color]', options_for_select(Theme::COLORS, theme.color || Theme::COLORS.values.first), { id: :theme_color } %>
  </div>

  <div class="actions">
    <%= form.submit %>
    <%= yield %>
  </div>
<% end %>
