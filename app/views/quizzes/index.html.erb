<p id="notice"><%= notice %></p>

<h1>Quizzes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title da</th>
      <th>Title en</th>
      <th>Subtitle da</th>
      <th>Subtitle en</th>
      <th>Result title da</th>
      <th>Result title en</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.name %></td>
        <td><%= quiz.title_da %></td>
        <td><%= quiz.title_en %></td>
        <td><%= quiz.subtitle_da %></td>
        <td><%= quiz.subtitle_en %></td>
        <td><%= quiz.result_title_da %></td>
        <td><%= quiz.result_title_en %></td>
        <td><%= link_to 'Show', quiz %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add quiz...', new_theme_quiz_path(@theme) %>
